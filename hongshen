<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>孤独的公路 - 终极版</title>
    <style>
        body { margin: 0; background: #d4a373; overflow: hidden; display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100vh; font-family: 'Courier New', monospace; touch-action: none; }
        #game-container { position: relative; border: 8px solid #3e2723; background: #a2d2ff; width: 600px; height: 500px; max-width: 100vw; max-height: 85vh; box-shadow: 0 20px 50px rgba(0,0,0,0.3); }
        canvas { display: block; width: 100%; height: 100%; image-rendering: pixelated; }
        #ui { position: absolute; top: 15px; width: 100%; display: flex; justify-content: space-around; color: #fff; text-shadow: 2px 2px 0px #000; font-size: 20px; pointer-events: none; z-index: 10; }
        .screen { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(26, 26, 26, 0.9); display: flex; flex-direction: column; justify-content: center; align-items: center; z-index: 100; color: white; text-align: center; }
        #startBtn { padding: 20px 60px; font-size: 30px; cursor: pointer; background: #795548; color: white; border: none; border-radius: 8px; box-shadow: 0 6px 0 #3e2723; transition: 0.1s; }
        #startBtn:active { transform: translateY(4px); box-shadow: 0 2px 0 #3e2723; }
        .instructions { color: #bdc3c7; margin-top: 20px; font-size: 14px; line-height: 1.6; }
    </style>
</head>
<body>

<div id="game-container">
    <div id="ui">
        <div>关卡: <span id="lvlName">1</span></div>
        <div>距离终点: <span id="timer">60</span>s</div>
    </div>

    <canvas id="gameCanvas" width="600" height="500"></canvas>

    <div id="startScreen" class="screen">
        <h1 style="font-size: 45px; margin-bottom: 10px; letter-spacing: 5px;">孤独的公路</h1>
        <div class="instructions">
            电脑端：使用 [←][→] 方向键控制<br>
            手机端：点击屏幕左右两侧转向
        </div>
        <button id="startBtn">开始驾驶</button>
    </div>

    <div id="deathScreen" class="screen" style="display: none;">
        <h1 id="deathMessage" style="font-size: 50px; color: #e74c3c;">GAME OVER</h1>
        <p id="deathSub" style="margin-bottom: 30px;">孤独吞噬了你的意志...</p>
        <button onclick="location.reload()" style="padding: 12px 40px; font-size: 18px;">重新上路</button>
    </div>
</div>

<script>
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');
    const startBtn = document.getElementById('startBtn');
    
    let currentLevel = 1, timeLeft = 60, isGameOver = false, isStarted = false;
    let carX = 300, roadOffset = 0, hillY = 250, keys = {}, props = [];

    // --- 交互逻辑 ---
    startBtn.onclick = function(e) {
        e.stopPropagation();
        isStarted = true;
        document.getElementById('startScreen').style.display = 'none';
        runTimer();
    };

    window.onkeydown = e => keys[e.key] = true;
    window.onkeyup = e => keys[e.key] = false;

    // 触摸控制优化
    canvas.addEventListener('touchstart', e => {
        if(!isStarted) return;
        const rect = canvas.getBoundingClientRect();
        const touchX = (e.touches[0].clientX - rect.left) * (canvas.width / rect.width);
        if (touchX < canvas.width / 2) keys["ArrowLeft"] = true;
        else keys["ArrowRight"] = true;
    }, {passive: false});

    window.addEventListener('touchend', () => { keys["ArrowLeft"] = false; keys["ArrowRight"] = false; });

    // --- 核心绘制函数 ---
    function drawCar(x, y) {
        let shake = isStarted ? Math.sin(Date.now() / 25) * 1.8 : 0;
        let fy = y + shake;
        // 阴影
        ctx.fillStyle = "rgba(0,0,0,0.15)";
        ctx.beginPath(); ctx.ellipse(x+25, fy+45, 35, 10, 0, 0, 7); ctx.fill();
        // 车身 (复古方头车)
        ctx.fillStyle = "#5d4037"; ctx.fillRect(x, fy+10, 50, 30); 
        ctx.fillStyle = "#795548"; ctx.fillRect(x+5, fy, 40, 18);
        ctx.fillStyle = "#2c3e50"; ctx.fillRect(x+8, fy+4, 34, 10); // 窗
        ctx.fillStyle = "#e74c3c"; ctx.fillRect(x+4, fy+15, 10, 6); // 尾灯
        ctx.fillRect(x+36, fy+15, 10, 6);
        ctx.fillStyle = "#95a5a6"; ctx.fillRect(x-2, fy+35, 54, 5); // 保险杠
    }

    function createProp(roadCenter) {
        if (Math.random() < 0.06) {
            props.push({
                side: Math.random() > 0.5 ? 1 : -1,
                z: 0,
                xOffset: Math.random() * 100 + 150
            });
        }
    }

    function loop() {
        // 1. 基础背景
        ctx.fillStyle = "#a2d2ff"; ctx.fillRect(0, 0, 600, 500); // 天空
        
        // 远山
        ctx.fillStyle = "#b08968";
        ctx.beginPath();
        for(let i=0; i<=600; i+=100) {
            ctx.lineTo(i, hillY - 30 + Math.sin(i*0.01 + roadOffset*0.005)*20);
        }
        ctx.lineTo(600, 500); ctx.lineTo(0, 500); ctx.fill();

        ctx.fillStyle = "#e6ccb2"; ctx.fillRect(0, hillY, 600, 500-hillY); // 地面

        if (isStarted && !isGameOver) {
            let roadCenter = 300;
            // 关卡特性
            if(currentLevel === 2) roadCenter += Math.sin(Date.now()/1000)*140;
            if(currentLevel === 3) {
                roadCenter += Math.cos(Date.now()/1200)*160;
                hillY = 250 + Math.sin(Date.now()/800)*50;
            }

            // 绘制公路
            ctx.fillStyle = "#34495e";
            ctx.beginPath();
            ctx.moveTo(roadCenter - 20, hillY); ctx.lineTo(roadCenter + 20, hillY);
            ctx.lineTo(carX + 450, 500); ctx.lineTo(carX - 350, 500);
            ctx.fill();

            // 动态路景 (仙人掌)
            createProp(roadCenter);
            props.forEach((p, i) => {
                p.z += 8;
                let scale = p.z / 300;
                let px = roadCenter + (p.side * p.xOffset * scale);
                let py = hillY + p.z;
                ctx.fillStyle = "#27ae60";
                ctx.fillRect(px, py, 10 * scale, 30 * scale); // 仙人掌
                if(p.z > 500) props.splice(i, 1);
            });

            // 绘制中线
            roadOffset += 18;
            ctx.strokeStyle = "#ecf0f1"; ctx.setLineDash([40, 50]);
            ctx.lineDashOffset = -roadOffset;
            ctx.lineWidth = 5;
            ctx.beginPath(); ctx.moveTo(roadCenter, hillY); ctx.lineTo(300, 500); ctx.stroke();

            // 玩家控制
            if(keys["ArrowLeft"] || keys["a"]) carX -= 8;
            if(keys["ArrowRight"] || keys["d"]) carX += 8;
            if(currentLevel === 1) carX += Math.sin(Date.now()/600)*0.8; // 直线微漂移

            // 碰撞判定
            if(Math.abs(carX - roadCenter) > 210) {
                isGameOver = true;
                document.getElementById('deathScreen').style.display = 'flex';
                const deathMsgs = ["", "GAME OVER", "OUT", "LOST"];
                const deathSubs = ["", "你因疲劳驶离了直线...", "弯道甩出了你的灵魂...", "你在起伏的虚无中失踪了..."];
                document.getElementById('deathMessage').innerText = deathMsgs[currentLevel];
                document.getElementById('deathSub').innerText = deathSubs[currentLevel];
            }
        }

        drawCar(275, 405);
        requestAnimationFrame(loop);
    }

    function runTimer() {
        const itv = setInterval(() => {
            if(isGameOver) return clearInterval(itv);
            timeLeft--;
            document.getElementById('timer').innerText = timeLeft;
            if(timeLeft <= 0) {
                if(currentLevel < 3) {
                    currentLevel++;
                    document.getElementById('lvlName').innerText = currentLevel;
                    timeLeft = currentLevel === 2 ? 120 : 180;
                    props = []; // 换关清空景物
                } else {
                    alert("你战胜了长达 6 分钟的孤独，抵达了公路尽头。");
                    location.reload();
                }
            }
