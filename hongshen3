<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>孤独的公路 - 修复硬核版</title>
    <style>
        body { margin: 0; background: #d4a373; overflow: hidden; display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100vh; font-family: 'Courier New', monospace; touch-action: none; }
        #game-container { position: relative; border: 8px solid #3e2723; background: #a2d2ff; width: 600px; height: 500px; max-width: 100vw; max-height: 85vh; box-shadow: 0 20px 50px rgba(0,0,0,0.3); }
        canvas { display: block; width: 100%; height: 100%; image-rendering: pixelated; }
        #ui { position: absolute; top: 15px; width: 100%; display: flex; justify-content: space-around; color: #fff; text-shadow: 2px 2px 0px #000; font-size: 20px; pointer-events: none; z-index: 10; }
        .screen { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(26, 26, 26, 0.95); display: flex; flex-direction: column; justify-content: center; align-items: center; z-index: 100; color: white; text-align: center; }
        #startBtn { padding: 20px 60px; font-size: 30px; cursor: pointer; background: #795548; color: white; border: none; border-radius: 8px; box-shadow: 0 6px 0 #3e2723; transition: 0.1s; }
        #startBtn:active { transform: translateY(4px); box-shadow: 0 2px 0 #3e2723; }
        .instructions { color: #bdc3c7; margin-top: 20px; font-size: 14px; line-height: 1.6; }
    </style>
</head>
<body>

<div id="game-container">
    <div id="ui">
        <div>关卡: <span id="lvlName">1</span></div>
        <div>距离终点: <span id="timer">60</span>s</div>
    </div>

    <canvas id="gameCanvas" width="600" height="500"></canvas>

    <div id="startScreen" class="screen">
        <h1 style="font-size: 45px; margin-bottom: 10px; letter-spacing: 5px;">孤独的公路</h1>
        <div class="instructions">
            警告：如果不按键，你将被弯道的离心力甩出<br>
            [←][→] 控制方向
        </div>
        <button id="startBtn">开始驾驶</button>
    </div>

    <div id="deathScreen" class="screen" style="display: none;">
        <h1 id="deathMessage" style="font-size: 50px; color: #ff5252;">OUT</h1>
        <p id="deathSub" style="margin-bottom: 30px;">孤独感将你甩出了赛道...</p>
        <button onclick="location.reload()" style="padding: 12px 40px; font-size: 18px;">重新上路</button>
    </div>
</div>

<script>
    const canvas = document.getElementById('gameCanvas');
    const ctx = canvas.getContext('2d');
    const startBtn = document.getElementById('startBtn');
    
    let currentLevel = 1, timeLeft = 60, isGameOver = false, isStarted = false;
    let carX = 0, roadOffset = 0, hillY = 220, keys = {};
    let trackCurve = 0; 
    let audioCtx, osc, gainNode;

    // --- 音频初始化 ---
    function initAudio() {
        audioCtx = new (window.AudioContext || window.webkitAudioContext)();
        osc = audioCtx.createOscillator();
        gainNode = audioCtx.createGain();
        osc.type = 'sawtooth';
        osc.frequency.setValueAtTime(40, audioCtx.currentTime);
        gainNode.gain.setValueAtTime(0, audioCtx.currentTime); // 初始静音
        osc.connect(gainNode);
        gainNode.connect(audioCtx.destination);
        osc.start();
    }

    // --- 交互逻辑 ---
    startBtn.onclick = function(e) {
        e.stopPropagation();
        initAudio(); // 必须由用户点击触发
        isStarted = true;
        document.getElementById('startScreen').style.display = 'none';
        runTimer();
    };

    window.onkeydown = e => keys[e.key] = true;
    window.onkeyup = e => keys[e.key] = false;

    canvas.addEventListener('touchstart', e => {
        if(!isStarted) return;
        const rect = canvas.getBoundingClientRect();
        const touchX = (e.touches[0].clientX - rect.left) * (canvas.width / rect.width);
        if (touchX < canvas.width / 2) keys["ArrowLeft"] = true;
        else keys["ArrowRight"] = true;
    }, {passive: false});

    window.addEventListener('touchend', () => { keys["ArrowLeft"] = false; keys["ArrowRight"] = false; });

    // --- 绘制车辆 ---
    function drawCar() {
        let shake = isStarted ? Math.sin(Date.now() / 20) * 1.5 : 0;
        let x = 300 - 25; 
        let y = 410 + shake;
        ctx.fillStyle = "rgba(0,0,0,0.15)";
        ctx.beginPath(); ctx.ellipse(x+25, y+45, 35, 10, 0, 0, 7); ctx.fill();
        ctx.fillStyle = "#5d4037"; ctx.fillRect(x, y+10, 50, 30); 
        ctx.fillStyle = "#795548"; ctx.fillRect(x+5, y, 40, 18);
        ctx.fillStyle = "#2c3e50"; ctx.fillRect(x+8, y+4, 34, 10);
        ctx.fillStyle = "#e74c3c"; ctx.fillRect(x+4, fy=y+15, 10, 6); ctx.fillRect(x+36, y+15, 10, 6);
        ctx.fillStyle = "#95a5a6"; ctx.fillRect(x-2, y+35, 54, 5);
    }

    // --- 核心循环 ---
    function loop() {
        ctx.fillStyle = "#a2d2ff"; ctx.fillRect(0, 0, 600, 500); // 天空
        ctx.fillStyle = "#e6ccb2"; ctx.fillRect(0, hillY, 600, 500-hillY); // 地面

        if (isStarted && !isGameOver) {
            // 关卡参数
            if(currentLevel === 1) trackCurve = 0;
            if(currentLevel === 2) trackCurve = Math.sin(Date.now() / 1500) * 5; 
            if(currentLevel === 3) {
                trackCurve = Math.sin(Date.now() / 1000) * 7; // 弯道更急
                hillY = 220 + Math.sin(Date.now() / 800) * 45;
                // 第三关调节音量
                if(gainNode) gainNode.gain.setTargetAtTime(0.05, audioCtx.currentTime, 0.1);
                if(osc) osc.frequency.setTargetAtTime(40 + Math.abs(trackCurve)*5, audioCtx.currentTime, 0.1);
            }

            // 渲染公路
            let currentCurve = 0;
            for (let i = 0; i < 200; i++) {
                let y = 500 - i * 1.5;
                let perspective = (y - hillY) / (500 - hillY);
                if (perspective < 0) continue;

                currentCurve += trackCurve * (1 - perspective) * 0.1;
                let x = 300 - carX + currentCurve * 20;
                let w = 20 + 420 * perspective;

                ctx.fillStyle = (Math.floor(i + roadOffset*0.2) % 6 < 3) ? "#333" : "#3a3a3a";
                ctx.fillRect(x - w/2, y, w, 2);

                if (Math.floor(i + roadOffset*0.2) % 10 < 5) {
                    ctx.fillStyle = "#fff";
                    ctx.fillRect(x - 2, y, 4, 2);
                }

                // 碰撞判定：引入离心力
                if (i === 15) { 
                    // 离心力：弯道曲率越大，车越往反方向滑
                    carX += trackCurve * 0.5; 
                    
                    if (Math.abs(300 - x) > w/2 - 12) {
                        isGameOver = true;
                        document.getElementById('deathScreen').style.display = 'flex';
                        const deathMsgs = ["", "GAME OVER", "OUT", "LOST"];
                        document.getElementById('deathMessage').innerText = deathMsgs[currentLevel];
                    }
                }
            }

            if(keys["ArrowLeft"] || keys["a"]) carX -= 9;
            if(keys["ArrowRight"] || keys["d"]) carX += 9;
            if(currentLevel === 1) carX += Math.sin(Date.now()/600)*0.9; 

            roadOffset += 15;
        }

        drawCar();
        requestAnimationFrame(loop);
    }

    function runTimer() {
        const itv = setInterval(() => {
            if(isGameOver) return clearInterval(itv);
            timeLeft--;
            document.getElementById('timer').innerText = timeLeft;
            if(timeLeft <= 0) {
                if(currentLevel < 3) {
                    currentLevel++;
                    document.getElementById('lvlName').innerText = currentLevel;
                    timeLeft = currentLevel === 2 ? 120 : 180;
                } else {
                    alert("抵达终点。");
                    location.reload();
                }
            }
        }, 1000);
    }

    loop();
</script>
</body>
</html>
